  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "oa": "dist/tui/dashboard-entry.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc --watch",
    "start": "node dist/tui/dashboard-entry.js",
    "reset": "rm -rf oa.db oa-workspace.json ~/.openaccounting && echo 'âœ“ Reset complete'",
    "fresh": "npm run build && npm run reset && npm run start",
    "test": "node --test --experimental-strip-types tests/*.test.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
