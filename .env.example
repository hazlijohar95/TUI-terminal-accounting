# OpenAccounting Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# OpenAI API Key (required for AI features)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Convex Backend URL (required)
# Get your deployment URL from: https://dashboard.convex.dev
CONVEX_URL=https://your-deployment.convex.cloud

# Application Environment
NODE_ENV=development

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# API Configuration (for Open API)
API_PORT=3000
API_HOST=0.0.0.0

# JWT Secret (min 32 characters, generate with: openssl rand -base64 32)
JWT_SECRET=your-secure-jwt-secret-min-32-chars

# JWT Refresh Secret (different from JWT_SECRET)
JWT_REFRESH_SECRET=your-secure-refresh-secret-min-32-chars

# Database Encryption Key (for sensitive fields like API keys, passwords)
# Generate with: openssl rand -base64 32
# IMPORTANT: Back this up securely - losing it means losing access to encrypted data
DB_ENCRYPTION_KEY=your-encryption-key-base64-here

# Rate Limiting (requests per minute)
API_RATE_LIMIT=100

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Security - HTTPS Enforcement (set to true in production)
# Requires a reverse proxy (nginx, Cloudflare, etc.) that sets X-Forwarded-Proto
REQUIRE_HTTPS=false
TRUST_PROXY=false
